# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
POST     /show                      controllers.Application.obtainTranslation()
GET     /show                      controllers.Application.obtainTranslation()
GET     /showTrainedDIr             controllers.Application.showTrainedDir()
GET     /showTempTestFiles          controllers.Application.showTempTestFiles()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
